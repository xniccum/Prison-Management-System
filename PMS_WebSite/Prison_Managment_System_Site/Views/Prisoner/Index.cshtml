@model IEnumerable<Prison_Managment_System_Site.Models.Prisoner>

@{
    ViewBag.Title = "Index";
}

<h2>Prionsers</h2>
<div class="row">
    <div class="col-lg-12 col-lg-offset-0">
        <input type="search" id="search" value="" class="form-control" placeholder="Prisoner's Name'">
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.Label("Name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.crime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.first_name + " " + item.last_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.crime)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.ID })
        </td>
    </tr>
}

</table>
